<div class="tools-image">
  <div class="valign-wrapper row login-box">
    <div class="col card hoverable s10 pull-s1 m6 pull-m3 l4 pull-l4">
      <form action="GET">
        <div class="card-content">
          <div class="input-field col s12">
            <input type="text" class="validate" name="tool" id="tool" placeholder="Search Tools" />
          </div>
          <div class="card-action right-align">
            <input type="submit" class="btn blue darken-2 text-white waves-effect waves-light" value="search">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<div id="offer">
  <div class="container">

    <div class="row">
      <div class="col s12 m8 offset-2">
        <h1>{{msg}}</h1>
        <h3>Offer a tool for rent</h3>
        <form action="POST">

          <div class="input-field">
            <!-- <i class="material-icons prefix">account_circle</i> -->
            <input id="icon_prefix" type="text">
            <label for="icon_prefix">First Name</label>
          </div>
          <div class="input-field">
            <!-- <i class="material-icons prefix">build</i> -->
            <input id="icon_prefix" type="text">
            <label for="icon_prefix">Tool</label>
          </div>

          <div class="input-field">
            <textarea id="textarea2" class="materialize-textarea" data-length="120"></textarea>
            <label for="textarea2">Tool Description</label>
          </div>

          <button class="btn waves-effect waves-light blue darken-2" type="submit" name="action">Submit
            <i class="material-icons right">build</i>
          </button>
        </form>
        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
    {{!-- Modal containing login information --}}
    <div class="modal" id="login">
        <div class="row">
        <div class="col m6 center-align">
            <h2 class="center-align">Login</h2>
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" type="email" class="validate">
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="pass" type="password" class="validate">
                            <label for="pass">Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <p>
                                <input type="checkbox" id="remember">
                                <label for="remember">Remember me</label>
                            </p>
                        </div>
                    </div>
                    <div class="divider"></div>
                    <div class="row">
                        <div class="col m12">
                            <p class="right-align">
                                <button class="btn btn-large waves-effect waves-light" type="button" name="action">Login</button>
                            </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>
  </div>
</div>
