<!DOCTYPE html>
<html lang="en">

<head>
  <title>Search Results - Toolz</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://fonts.googleapis.com/css?family=Carter+One|Spectral&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" type="text/css" href="styles/styles.css">
</head>

<body>
  <nav class="z-depth-0" id="navbar">
    <div class="nav-wrapper grey darken-3">
      <a href="/" class="brand-logo center" id="brand">Toolz</a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li><a href="/login" data-target="login" class="btn waves-effect waves-light grey darken-2">Login</a></li>
      </ul>
      <form class="hide-on-med-and-down" id="search-form" action="/search/chain">
        <div class="input-field" style="max-width: 400pt;">
          <input id="search" type="search" required>
          <label class="label-icon" for="search"><i class="material-icons">search</i></label>
          {{!-- <button type="submit">Search</button> --}}
          <i class="material-icons">close</i>
        </div>
      </form>
    </div>
  </nav>

  <ul class="sidenav" id="mobile-demo">
    <li><a href="/login" data-target="login">Login</a></li>
  </ul>
  <div class="tools-image3">
    <div class="container">
      {{#each tools}}
      <div class="row">
        <div class="col s12">
          <div class="card grey darken-2">
            <div class="card-content white-text">
              <span class="card-title">{{this.name}}</span>
              <p>Tool ID #{{this.id}}</p>
              <p><strong>Description </strong> {{this.description}}</p>
              <p><strong>Price: </strong> ${{this.price}}</p>
              {{#if this.rented}}
              <button class="btn waves-effect waves-light gray darken-1">OUT
                <i class="material-icons right">build</i>
              </button>
              {{else}}
              <button data-target="modal-rent" class="btn waves-effect waves-light blue darken-3 modal-trigger rent"
                data-tool-id="{{this.id}}" data-owner-id="{{this.MemberId}}" data-tool-price="{{this.price}}">Rent
                <i class="material-icons right">build</i>
              </button>
              {{/if}}
              <button data-target="modal-delete" class="btn waves-effect waves-light red darken-1 modal-trigger delete"
                data-tool-id="{{this.id}}">Delete
                <i class="material-icons right">build</i>
              </button>
            </div>
            <div class="card-action">
              <a class="white-text" href="/">‚Üê Back To Home</a>
            </div>
          </div>
        </div>
        <!-- Modal Structure -->
        <div id="modal-delete" class="modal">
          <div class="modal-content">
            <h4>Delete Tool</h4>
            <p>You deleted -- {{this.name}}</p>
          </div>
          <div class="modal-footer">
            <a href="/" class="modal-close waves-effect waves-green btn-flat">Agree</a>
          </div>
        </div>

        <!-- Rent Modal Structure -->
        <div id="modal-rent" class="modal">
          <div class="modal-content">
            <h4>Rent Tool</h4>
            <p>You Rented -- {{this.name}}</p>
          </div>
          <div class="modal-footer">
            <a href="/tools/{{this.id}}" class="modal-close waves-effect waves-green btn-flat">Agree</a>
          </div>
        </div>

      </div>
      {{/each}}

    </div>
  </div>



  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  {{!-- <script src="/js/index.js"></script> --}}
  <script src="/js/tool.js"></script>